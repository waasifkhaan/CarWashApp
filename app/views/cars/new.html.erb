<h1>Create a User! </h1>

<%= form_for @car, :url => url_for(:controller => 'cars', :action => 'create') do |f| %>
<div>
  <%= f.label :make %>
  <%= f.text_field :make %>
</div>
<div>
  <%= f.label :model %>
  <%= f.text_field :model %>
</div>
<div>
  <%= f.label :license_plate %>
  <%= f.text_field :license_plate %>
</div>
  <%= f.submit %>
<% end %>

<% if @car.errors.any? %>
  <div id="error_explanation" class="footer" >
    <h4>
      <%= pluralize(@car.errors.count, "error") %>
      prohibited this user from being saved:
    </h4>
 
    <ul style="color:red;">
    <% @car.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>