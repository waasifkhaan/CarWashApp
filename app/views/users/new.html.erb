<h1>Create a User! </h1>
<%= form_for(@user) do |f| %>
<div>
<%= f.label :name %>
<%= f.text_field :name %>
</div>
<div>
<%= f.label :age %>
<%= f.number_field :age %>
</div>
<div>
<%= f.label :email %>
<%= f.email_field :email %>
</div>
<div>
<%= f.label :zipcode %>
<%= f.number_field :zipcode %>
</div>
<div>
<%= f.label :password %>
<%= f.password_field :password %>
</div >
<%= f.submit %>

<% end %>

<% if @user.errors.any? %>
  <div id="error_explanation" class="footer" >
    <h4>
      <%= pluralize(@user.errors.count, "error") %>
      prohibited this user from being saved:
    </h4>
 
    <ul style="color:red;">
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
