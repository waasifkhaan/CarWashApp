
<%= form_for(@user) do |f| %>
    <div>
        <%= f.label :name %>
        <%= f.text_field :name, {class: 'form-control'} %>
    </div>
    <div>
        <%= f.label :age %>
        <%= f.number_field :age, {class: 'form-control'} %>
    </div>
    <div>
        <%= f.label :email %>
        <%= f.email_field :email, {class: 'form-control'} %>
    </div>
    <div>
        <%= f.label :zipcode %>
        <%= f.number_field :zipcode, {class: 'form-control'} %>
    </div>
    <div>
        <%= f.label :password %>
        <%= f.password_field :password, {class: 'form-control'} %>
    </div >
    <%= f.submit %>
<% end %>