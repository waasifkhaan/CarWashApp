


<%= form_for @user, :url => url_for(:controller => 'sessions', :action => 'create') do |f| %>
    <div>
      <%= f.label :email %>
      <%= f.text_field :email, {class: 'form-control'} %>
    </div>
    <div>
      <%= f.label :password %>
      <%= f.password_field :password, {class: 'form-control'} %>
    </div><br>
        <%= f.submit "Sign In", :class => 'btn btn-primary'  %>
    <% end %>

<h3>External Providers</h3>
<p><%= link_to "Login  with Github!", "/auth/github", class: "btn btn-primary" %></p>


<div style="color:red;" >
    <%= session[:message]%>
    <%= session[:message] = nil %>
</div>


